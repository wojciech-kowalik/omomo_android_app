<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <gradient
                    android:angle="180"
                    android:centerColor="@color/omomo_background"
                    android:endColor="#ffc5c5c5"
                    android:startColor="#ffc5c5c5"
                    android:type="linear"/>

            <corners android:radius="18dp"/>
        </shape>
    </item>

    <item
            android:left="0dp"
            android:right="0dp"
            android:top="0dp"
            android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>

</layer-list>